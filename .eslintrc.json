{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/semi": "warn",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "off",
        "indent": [2, 4],
        "no-unreachable": 1,
        "camelcase": 0,
        "quotes": [1, "single"],
        "radix": 2,
        "space-after-keywords": [0, "always"],
        "space-before-function-paren": [0, "always"],
        "spaced-comment": 0,
        "use-isnan": 2,
        "wrap-iife": [2, "inside"],
        "wrap-regex": 0,
        "comma-style": [2, "last"],
        "operator-linebreak": [2, "before"],
        "no-irregular-whitespace": 2
    }
}
